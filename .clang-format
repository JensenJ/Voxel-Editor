BasedOnStyle: LLVM
IndentWidth: 4
TabWidth: 4
UseTab: Never

ColumnLimit: 100

AllowShortIfStatementsOnASingleLine: false
AllowShortLoopsOnASingleLine: false
CommentPragmas: '^//|^/\*|^#'

BreakBeforeBraces: Attach
SpaceBeforeParens: ControlStatements

PointerAlignment: Left
ReferenceAlignment: Left
DerivePointerAlignment: false

SortIncludes: true
IncludeBlocks: Preserve

IncludeCategories:
  - Regex: '^<imgui.*>$'
    Priority: 2
    SortPriority: 2
  - Regex: '^<glad.*>$'
    Priority: 3
    SortPriority: 3
  - Regex: '^<GLFW.*>$' #GLFW must always be after glad
    Priority: 4
    SortPriority: 4
  - Regex: '^<glm.*>$'
    Priority: 5
    SortPriority: 5

  - Regex: '^<.*>$'
    Priority: 1
    SortPriority: 1
  - Regex: '^".*"$'
    Priority: 10
    SortPriority: 10
